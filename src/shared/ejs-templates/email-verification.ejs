<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Verification</title>

    <!-- Google Sans Font -->
    <link href="https://fonts.cdnfonts.com/css/google-sans" rel="stylesheet" />
  </head>

  <body
    style="
      padding: 40px;
      background-color: #f5f3ff;
      font-family: 'Google Sans', sans-serif;
    "
  >
    <!-- Logo -->
    <div style="text-align: center; margin-bottom: 40px">
      <img
        src="https://d10bbzwoasv4gs.cloudfront.net/default/logo.png"
        alt="NursesNow Logo"
        style="width: 186px; height: auto"
      />
    </div>

    <!-- Email Content -->
    <div
      style="
        max-width: 540px;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 16px;
        padding: 24px;
      "
    >
      <!-- Heading -->
      <h2
        style="
          color: #2a2a2b;
          font-size: 18px;
          margin: 0 0 16px;
          font-weight: 600;
        "
      >
        Verify your email
      </h2>

      <!-- Greeting -->
      <p
        style="
          color: #68696c;
          font-size: 12px;
          font-weight: 400;
          margin-top: 24px;
        "
      >
        Hi <%= name || 'User' %>,
      </p>

      <!-- Message -->
      <p
        style="
          color: #68696c;
          font-size: 12px;
          font-weight: 400;
          margin-top: 24px;
        "
      >
        Welcome to NursesNow! Please verify your email address to secure your
        account.
      </p>

      <!-- CTA Button -->
      <a
        href="<%= redirectUrl %>"
        style="
          background-color: #7715e3;
          color: #ffffff;
          text-decoration: none;
          text-align: center;
          padding: 18px;
          width: 80%;
          max-width: 280px;
          border-radius: 12px;
          display: block;
          font-size: 16px;
          margin: 24px auto;
          font-weight: 500;
        "
      >
        Verify My Email
      </a>

      <!-- Info Text -->
      <p
        style="
          color: #68696c;
          font-size: 12px;
          margin: 24px 0 0;
          font-weight: 400;
        "
      >
        If you didnâ€™t sign up for this account, you can safely ignore this
        email.
      </p>

      <!-- Signature -->
      <p
        style="
          color: #717171;
          font-size: 12px;
          line-height: 20px;
          font-weight: 400;
          margin-top: 24px;
        "
      >
        Thank you,<br />
        NursesNow Team
      </p>
    </div>

    <!-- Footer -->
    <div
      style="
        text-align: center;
        font-size: 12px;
        color: #717171;
        margin-top: 40px;
      "
    >
      <p style="margin: 4px 0">
        &copy; <%= new Date().getFullYear() %> NursesNow
      </p>
      <p style="margin: 4px 0">
        <a
          href="<%= typeof unsubscribeUrl !== 'undefined' ? unsubscribeUrl : '#' %>"
          style="color: #303030; text-decoration: none"
          >Unsubscribe</a
        >
      </p>
    </div>
  </body>
</html>
